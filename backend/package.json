{
  "name": "devarp-backend",
  "version": "1.0.0",
  "description": "Devarp stok ve üretim yönetimi uygulaması - Backend API",
  "main": "src/app.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci --watchAll=false",
    "migrate": "node database/migrate.js",
    "seed": "node database/seed.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/**/*.js",
    "format:check": "prettier --check src/**/*.js",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix"
  },
  "keywords": [
    "inventory",
    "manufacturing",
    "stock",
    "production",
    "nodejs",
    "express",
    "postgresql"
  ],
  "author": "Devarp Team",
  "license": "MIT",
  "dependencies": {
    "@types/pg": "^8.15.5",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "pg": "^8.16.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/devarp-app.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/devarp-app/issues"
  },
  "homepage": "https://github.com/your-org/devarp-app#readme"
}
