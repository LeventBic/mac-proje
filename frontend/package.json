    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^4.12.0",
    "react-modal": "^3.16.1",
    "react-redux": "^9.0.4",
    "react-router-dom": "^6.20.1",
    "react-scripts": "^5.0.1",
    "react-select": "^5.8.0",
    "react-table": "^7.8.0",
    "recharts": "^2.8.0",
    "web-vitals": "^3.5.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
